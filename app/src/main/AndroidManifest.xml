<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mo.zain.food_recipe">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconimage"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconimage"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodRecipe"
        android:usesCleartextTraffic="true">
        <activity android:name=".authentication.RegistrationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Matreal"/>
        <activity
            android:name=".authentication.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Matreal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailsActivity" />
        <activity android:name=".DataActivity" />
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>